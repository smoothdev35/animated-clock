@import 'normalize-stylus'

*
box-sizing border-box
body
margin 0
.container
  --last-minute-flip-time 0.05s
  --bLast-minute-flip-time 0.1s
  --last-hour-flip-time 0.15s
  --bLast-hour-flip-time 0.2s
  --gradient-color-one #00FCFB
  --gradient-color-two #0092FF
  --gradient-color-three #FAFCA4
  --gradient-color-four #FCBA00
  --gradient-transition-time 1.4s
  display flex
  width 100%
  height 100vh
  background whitesmoke
  .clock-wr
    
    margin auto
    display flex
    justify-content space-evenly
    align-items center
    width 60vmin
    height 17vmin
    padding-block 1%
    padding-top 1%
    padding-bottom 1%
    border 2px solid
    border-radius 5vmin
    background black
    visibility visible
    .icon
      position relative
      width 13vmin
      height 13vmin
      background-image linear-gradient(
  135deg,var(--gradient-color-one),var(--gradient-color-two)
)
      z-index 1
      border-radius 3.5vmin
      svg
        width 100%
        height 100%
        position absolute
        z-index 2
        pointer-events none
      &::before
        border-radius 3.5vmin
        content ''
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        background-image linear-gradient(
  135deg,var(--gradient-color-three),var(--gradient-color-four)
)
        z-index -1
        transition opacity var(--gradient-transition-time) linear
        opacity 0
      &.activated::before
        opacity 1
  .numbers-wr
    display flex
    justify-content space-between
    padding-inline-start 0.5%
    padding-left 0.5%
    width 70%
    height 100%
    position relative
    perspective 60vmin

    .sep
      height 100%
      padding-block 10%
      padding-top 10%
      padding-bottom 10%
      display flex
      flex-direction column
      justify-content space-around
      align-items center
      span
        width 1.75vmin
        height 1.75vmin
        background white
        border-radius 50% 
    .num
      width 21%
      height 100%
      background-color #3B3B4C
      background-image url("https://res.cloudinary.com/dugd5fjqo/image/upload/v1592557058/carbon-fibre_mzczo6.png")
      border-radius 3vmin
      position relative
      transform-style preserve-3d
      @keyframes flip{
        0% {transform:rotateX(0)scale(1.1);opacity:0;}
        0.1% {transform:rotateX(0)scale(1.1);opacity:1;}
        99.9% {transform:rotateX(-180deg)scale(1.1);opacity:1;}
        100% {transform:rotateX(-180deg)scale(1.1);opacity:0;}
      }
      .digit
        position absolute
        width 100%
        padding-top 20%
        height 100%
        display flex
        justify-content center
        align-items center
        color white
        font-size 12vmin
      .line
        position absolute
        z-index 2
        width 100%
        height 2%
        background black
        top 50%
        transform translateY(-50%)
        &.flapping
          opacity 0.2
          
    
      .flap
        width 100%
        height 50%
        position absolute
        top 0
        background-color #3B3B4C
        background-image url("https://res.cloudinary.com/dugd5fjqo/image/upload/v1592557058/carbon-fibre_mzczo6.png")
        border-top-left-radius 3.5vmin
        border-top-right-radius 3.5vmin
        transform rotateX(0)scale(1.1)
        transform-origin bottom center
        opacity 0
       
        
        &.m2-flap
          animation flip var(--last-minute-flip-time) linear forwards
       
        &.m1-flap
          animation flip var(--bLast-minute-flip-time) linear forwards
        &.h2-flap
          animation flip var(--last-hour-flip-time) linear forwards
        &.h1-flap
          animation flip var(--bLast-hour-flip-time) linear forwards
          
